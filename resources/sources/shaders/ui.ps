#include "layout.h"

SamplerState g_sampler : register( s0 );

void main(
	in	float4		in_position		: SV_Position,
	in	float2		in_texcoord		: TEXCOORD,
	nointerpolation
	in	float4		in_mult_color	: COLOR0,
	nointerpolation
	in	float4		in_add_color	: COLOR1,
	nointerpolation
	in	uint		in_texture_id	: TEXTURE_ID,
	out	float4		out_color		: SV_Target0
)
{
	if ( in_texture_id >= g_max_textures )
		out_color = in_add_color;
	else
		out_color = in_mult_color * g_textures[in_texture_id].Sample( g_sampler, in_texcoord ).rgba + in_add_color;
}